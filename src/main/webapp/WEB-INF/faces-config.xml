<?xml version="1.0" encoding="windows-1252"?>
<faces-config>
    
    <navigation-rule>
        <from-view-id>/login.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{loginBean.login()}</from-action>
            <from-outcome>login-success</from-outcome>
            <to-view-id>/eventos/eventos.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/eventos/eventos.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{eventosBean.agregarNuevoEvento()}</from-action>
            <from-outcome>agregar-nuevo-evento</from-outcome>
            <to-view-id>/eventos/agregarEvento.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/eventos/agregarEvento.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{agregarEventoBean.agregarNuevoEvento()}</from-action>
            <from-outcome>agregar-nuevo-evento-success</from-outcome>
            <to-view-id>/eventos/eventos.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    
</faces-config>
